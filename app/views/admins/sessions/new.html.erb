<div class="container">
    <div class="row">
        <div class="col">
          <div class = "admins">
          <h2>管理者用ログイン画面</h2>
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.label :メールアドレス %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
            <div class="field">
              <%= f.label :パスワード %><br />
              <%= f.password_field :password, autocomplete: "current-password" %>
            </div>
            <div class="actions">
              <%= f.submit "ログイン", class: 'btn btn-primary cart_botton' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
</div>
