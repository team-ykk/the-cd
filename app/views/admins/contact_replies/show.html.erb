<div class="container">
	<div class="row">
		<div class="col text-center">
      		<h1>お問合せ詳細</h1>
      	</div>
    	<div class="col text-center">
    		<div class="mozi">
    		  <p>お問合せ内容</p>
        </div>
    		<p>
      			<%= @contact.contact_content %>
      		</p>
    	</div>
    	<div class="col text-center">
    		<%= form_for @reply,  url: admins_contact_replies_path do |f| %>
          <div class="mozi">
  	    		<p>メールアドレス</p>
          </div>
          <div class="mozi">
	    		 <p>返信入力フォーム</p>
          </div>
	    		<%= f.text_field :reply_content %>
	       		<div class="hennshinn">
	    			<%= f.submit'返信', class:"btn btn-primary" %>
	    		</div>
    		<% end %>
    	</div>
    </div>
</div>

<style>

input[type="text"] {
        width: 800px;
        height: 200px;
    }
.hennshinn{
	height: 100px;
	margin-left: 800px;
}
.mozi{
	margin-right: 600px;
}
</style>

