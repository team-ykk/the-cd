
<div class="container">
  <div class="row">
  	<h2>商品一覧</h2>
  	<div class="col">
  		<p>発売日順・いいね順</p>
  		<p>検索機能</p>
  		<%= @items.each do |item| %>
  		<%= item.item_profile_id %>
  		<%= item.shipdate %>
  		<%= item.item_name %>
  		<%= item.artists.artist_name %>
  		<p>いいね数</p>
  		<p>レビュー数</p>
  		<%= item.price %>
  		<% end %>
  		<%= paginate @items, class: "paginate" %>
  	</div>
  </div>
</div>
