
<div class="container">
  <div class="row-md-10">
  	<h2>商品一覧</h2>
    <p>発売日順・<%= link_to "いいね順", items_ranking_path %></p>
    <p>検索機能</p>

    <%= form_tag items_path, :method => 'get' do %> <%#　projects_pathはモデル名で読みかえること %>
    <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :item_name => nil %>
    </p>
    <% end %>

  	<div class="col-md-12">
  		<%= @items.each do |item| %>
  		<%= item.attachment_image_tag @items, :item_profile, :fill, 100,100,format: 'jpeg' %>
  		<%= item.shipdate %>
  		<%= item.item_name %>
  		<%= item.artist.artist_name %>
  		<p>いいね数</p>
  		<p>レビュー数</p>
  		<%= item.price %>
  		<% end %>
  	</div>
  </div>
</div>

