
<div class="container">
	<div class="row-md-10">
		<h2>商品詳細</h2>

		<div class="col-md-6"><!-- ここに画像と商品の説明 -->
			<div>
				<%= attachment_image_tag @item, :item_profile, :fill,100, 100, format: 'jpeg' %>
			    <p>カートに入れる</p>
			    <p>いいね数</p>
			    <p>レビュー数</p>
			</div>
			<div>
				<%= @item.item_name %>
				<%= @item.artist.artist_name %>
				<%= @item.label.label_name %>
				<%= @item.genre.genre_name %>
				<%= @item.shipdate %>
				<%= @item.price %>
				<%= @item.status %>
			</div>
		</div>

		<div class="col-md-6"><!-- ここに曲名　-->
			<%= @item.discs.each do |disc| %>
			<%= disc.disc_name %>
			<%= @disc.songs.each do |song| %>
			<%= song.song_name %>
			<% end %>
			<% end %>
		</div>
	</div>
	<div class="row-md-10">
		<p>レビューの一覧</p>
	</div>
</div>
